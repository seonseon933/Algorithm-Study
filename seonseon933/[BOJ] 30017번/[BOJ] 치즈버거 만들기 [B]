import java.util.*;
import java.lang.*;
import java.io.*;

class Main {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int a = sc.nextInt();
        int b = sc.nextInt();

        if(a <= b){
            b = a - 1;    
        }
        else{ // 패티 > 치즈
            a = b + 1;
        } 
        
        
        System.out.println(a + b);
    }
}
